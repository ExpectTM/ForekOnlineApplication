@using static ForekOnlineApplication.Enums.Enums;
@model ForekOnlineApplication.Models.Institution

@{
    ViewData["Title"] = "AddInstitution";
}
<br />

<div class="card">
    <div class="card-header text-center" style="background-color:brown; color:white;">
        <h4><strong>Company Details</strong></h4>
    </div>
    <div class="row">
        <form asp-action="AddQualification">
            <div class="row">
                <div class="col-md-12">
                    <h5>Are you with a Company?</h5>
                    <input type="radio" id="yes" name="company" value="Yes">
                    <label for="yes">Yes</label><br>
                    <input type="radio" id="no" name="company" value="No">
                    <label for="no">No</label><br>
                    <div class="card-body">
                        <div class="row">

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group col-md-6">
                                <label asp-for="RegistrationNumber" class="control-label">Req No</label>
                                <input asp-for="RegistrationNumber" class="form-control" />
                                <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
                            </div>

                            <div class="form-group col-md-6">
                                <label asp-for="InstitutionName" class="control-label">Institution Name</label>
                                <input asp-for="InstitutionName" class="form-control" />
                                <span asp-validation-for="InstitutionName" class="text-danger"></span>
                            </div>

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group col-md-6">
                                <label asp-for="InstitutionDescription" class="control-label">Institutiton Description</label>
                                <input asp-for="InstitutionDescription" class="form-control" />
                                <span asp-validation-for="InstitutionDescription" class="text-danger"></span>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group mt-2">
                <button type="submit" class="btn btn-primary" asp-controller="" asp-action="" />Back </button>
                <input type="submit" value="Save" class="btn btn-primary" />
                <input type="reset" value="Clear" class="btn btn-secondary" />
                <input type="submit" value="Next" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>








