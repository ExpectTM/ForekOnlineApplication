@model List<ForekOnlineApplication.Models.Address>

<h2>
    Address
</h2>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>AddressLine1</th>
                <th>AddressLine2</th>
                <th>Province</th>
                <th>Country</th>
         
            </tr>
        </thead>
        <tbody>
            @foreach (var address in Model)
            {
                <tr>
                    <td>@address.AddressLine1</td>
                    <td>@address.AddressLine2</td>
                    <td>@address.Province</td>
                    <td>@address.Country</td>
                    
                    <td>
                        <a asp-action="Edit" asp-route-id="@address.AddressId">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@address.AddressId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No Address found.</p>
}

<a asp-action="Create" class="btn btn-primary">Create New</a>

<script src="~/lib/notyf.min.js"></script>

