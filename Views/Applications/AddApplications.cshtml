@model ForekOnlineApplication.Models.Applications

<h2>You Have Selected The Following Course, Ready To Apply</h2>

@using (Html.BeginForm("AddApplications", "Applications", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.CourseName)
        @Html.DisplayFor(model => model.CourseName)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CourseType)
        @Html.DisplayFor(model => model.CourseType)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CourseDescription)
        @Html.DisplayFor(model => model.CourseDescription)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Modules)
        @Html.DisplayFor(model => model.Modules)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NQL)
        @Html.DisplayFor(model => model.NQL)
	
    </div>

   

    <input type="submit" value="Apply" class="btn btn-primary" />
}

