@model List<ForekOnlineApplication.Models.Course>

<h2>Course List</h2>

@if (Model.Count > 0)
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Course Name</th>
                <th>Course Type</th>
                <th>NQF Level</th>
                <th>Course Modules</th>
                <th>Course Description</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.CourseName</td>
                    <td>@course.CourseType</td>
                    <td>@course.NQL</td>
                    <td>@course.Modules</td>
                    <td>@course.CourseDescription</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@course.CourseId">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@course">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Course not found.</p>
}

<a asp-action="Create" class="btn btn-primary">Create New</a>

<script src="~/lib/notyf.min.js"></script>
