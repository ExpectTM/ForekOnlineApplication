@using static ForekOnlineApplication.Enums.Enums;
@model ForekOnlineApplication.Models.Course

@{
    ViewData["Title"] = "AddCourse";
}
<br />

<div class="card">
    <div class="card-header text-center" style="background-color:brown; color:white;">
        <h4><strong>Choose Three Courses of Your Own Choice</strong></h4>
    </div>
    <div class="row">
        <form asp-action="AddCourse">
            <div class="row">
                <div class="col-md-12">
                    <h3>First Choice</h3>
                    <div class="card-body">
                        <div class="row">

                            <div class="form-group col-md-6">
                                <label asp-for="CourseName" class="control-label">Course Name</label>
                                <input asp-for="CourseName" class="form-control" />
