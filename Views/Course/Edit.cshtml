@model ForekOnlineApplication.Models.Course

<h2>Edit Course</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="CourseId" />
    <div class="form-group">
        <label asp-for="CourseName">Course Name</label>
        <input asp-for="CourseName" class="form-control" />
        <span asp-validation-for="CourseName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CourseType">Course</label>
        <input asp-for="CourseType" class="form-control" />
        <span asp-validation-for="CourseType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NQL">NQF Level</label>
        <input asp-for="NQL" class="form-control" />
        <span asp-validation-for="NQL" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CourseDescription">Course Description</label>
        <input asp-for="CourseDescription" class="form-control" />
        <span asp-validation-for="CourseDescription" class="text-danger"></span>
    </div>
    <br />

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<script src="~/lib/notyf.min.js"></script>

