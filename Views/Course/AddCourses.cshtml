@using static ForekOnlineApplication.Enums.Enums;
@model ForekOnlineApplication.Models.Course

@{
    ViewData["Title"] = "AddCourse";
}

<div class="mb-3">
    <a asp-action="Index" class="btn btn-primary">Course List</a>
</div>

<div class="card border-primary mb-3 justify-content-center" style="max-width: 34rem;">
    <div class="card-header text-center"><h4>Add Course</h4></div>
    <div class="card-body">
        <div class="row">
        <form asp-action="AddCourses">
            @*<input asp-for="PersonId" value="@ViewData["Id"]" hidden />*@
            
                <div class="col-md-12">
                   
                            <div class="form-group col-md-12">
                                <label asp-for="CourseName" class="control-label">Course Name</label>
                                <input asp-for="CourseName" class="form-control" />
                                <span asp-validation-for="CourseName" class="text-danger"></span>
                            </div>
                              

                            <div class="form-group col-md-12">
                                <label asp-for="CourseType" class="control-label">Course Type</label>
                                <input asp-for="CourseType" class="form-control" />
                                <span asp-validation-for="CourseType" class="text-danger"></span>
                            </div>


                            <div class="form-group col-md-12">
                                <label asp-for="NQL" class="control-label">NQL Level</label>
                                <input asp-for="NQL" class="form-control" />
                                <span asp-validation-for="NQL" class="text-danger"></span>
                            </div>

                            <div class="form-group col-md-12">
                                <label asp-for="Modules" class="control-label">Course Modules</label>
                                <input asp-for="Modules" class="form-control" />
                                <span asp-validation-for="Modules" class="text-danger"></span>
                            </div>

                                <div class="form-group col-md-12">
                                    <label asp-for="CourseDescription" class="control-label">Course Description</label>
                                    <textarea asp-for="CourseDescription" class="form-control"></textarea>
                                    <span asp-validation-for="CourseDescription" class="text-danger"></span>
                                </div>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Apply" class="btn btn-primary" />
                <input type="reset" value="Clear" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>






